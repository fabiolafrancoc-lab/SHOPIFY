.card{background:var(--bg3);border-radius:20px;padding:28px;border-top:3px solid transparent;}
.card.c{border-top-color:var(--cyan);}
.card.m{border-top-color:var(--magenta);}
.card-icon{width:44px;height:44px;border-radius:12px;display:flex;align-items:center;justify-content:center;margin-bottom:16px;}
