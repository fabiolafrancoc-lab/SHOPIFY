<script>
// ===== COMPANION NAME BASED ON AGE (from Supabase) =====
// Queries the registration to determine Lupita (55+) or Fernanda (25-54)
// Requires: supabase-js loaded + registration_id available from URL or session

async function loadCompanionName(supabaseClient, registrationId) {
  try {
    const { data, error } = await supabaseClient
      .from('registrations')
      .select('fecha_nacimiento_familia, edad_familia')
      .eq('registration_id', registrationId)
      .single();

    if (error || !data) {
      console.warn('Could not fetch age for companion assignment:', error);
      return;
    }

    // Calculate age from fecha_nacimiento if edad_familia not stored directly
    let age = data.edad_familia;
    if (!age && data.fecha_nacimiento_familia) {
      const birth = new Date(data.fecha_nacimiento_familia);
      const today = new Date();
      age = today.getFullYear() - birth.getFullYear();
      const m = today.getMonth() - birth.getMonth();
      if (m < 0 || (m === 0 && today.getDate() < birth.getDate())) age--;
    }

    if (!age) return;

    // Rule: Lupita = 55+  |  Fernanda = 25-54
    const companion = age >= 55
      ? { name: 'Lupita', full: 'Lupita, Compañera IA' }
      : { name: 'Fernanda', full: 'Fernanda, Compañera IA' };

    const benefitEl = document.getElementById('companionBenefitName');
    const stepEl = document.getElementById('companionName');

    if (benefitEl) benefitEl.textContent = companion.full;
    if (stepEl) {
      stepEl.closest('p').innerHTML =
        'En las próximas <strong>24 horas</strong>, <strong>' +
        companion.name +
        '</strong> llamará a tu familia para presentarse y guiarlos';
    }
  } catch (err) {
    console.error('Companion name load error:', err);
  }
}

