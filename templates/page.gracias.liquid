  :root {
    --cyan: #06B6D4;
    --cyan-dark: #0891B2;
    --cyan-glow: rgba(6, 182, 212, 0.15);
    --magenta: #EC4899;
    --magenta-dark: #DB2777;
    --magenta-glow: rgba(236, 72, 153, 0.12);
    --gray-950: #0F172A;
    --gray-900: #1F2937;
    --gray-800: #374151;
    --gray-700: #4B5563;
    --gray-600: #6B7280;
    --gray-400: #9CA3AF;
    --gray-300: #D1D5DB;
    --white: #FFFFFF;
    --gold: #F59E0B;
    --green: #10B981;
    --green-dark: #059669;
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }

  body {
    font-family: 'Plus Jakarta Sans', sans-serif;
    background: var(--gray-950);
    color: var(--white);
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden;
  }

  .page-wrapper {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  .page-wrapper::before {
    content: '';
    position: fixed;
    top: -20%;
    right: -15%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--cyan-glow) 0%, transparent 65%);
    pointer-events: none;
  }

  .page-wrapper::after {
    content: '';
    position: fixed;
    bottom: -10%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--magenta-glow) 0%, transparent 65%);
    pointer-events: none;
  }

  /* Header */
  .header {
    position: relative;
    z-index: 10;
    padding: 20px 20px 0;
    text-align: left;
  }

  .logo-container {
    display: inline-flex;
    align-items: center;
    gap: 10px;
  }

  .logo-mark { width: 36px; height: 36px; }

  .logo-text {
    font-family: 'DM Serif Display', serif;
    font-size: 20px;
    color: var(--white);
  }

  .logo-text span { color: var(--cyan); }

  /* Main */
  .main-content {
    position: relative;
    z-index: 10;
    max-width: 480px;
    margin: 0 auto;
    padding: 28px 20px 40px;
  }

  /* ===== SUCCESS HERO ===== */
  .success-hero {
    text-align: center;
    margin-bottom: 32px;
    animation: fadeInUp 0.6s ease-out;
  }

  .success-check {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, var(--green), var(--green-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 40px rgba(16, 185, 129, 0.35), 0 0 80px rgba(16, 185, 129, 0.15);
    animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .success-check svg {
    width: 40px;
    height: 40px;
    color: white;
    animation: checkDraw 0.4s ease-out 0.3s both;
  }

  .success-title {
    font-family: 'DM Serif Display', serif;
    font-size: 28px;
    line-height: 1.2;
    margin-bottom: 10px;
    background: linear-gradient(135deg, var(--green), var(--cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .success-subtitle {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
  }

  .success-subtitle strong {
    color: var(--white);
  }

  /* ===== COUNTDOWN DELIVERY ===== */
  .delivery-banner {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(6, 182, 212, 0.08));
    border: 1px solid rgba(16, 185, 129, 0.25);
    border-radius: 16px;
    padding: 20px;
    text-align: center;
    margin-bottom: 24px;
    animation: fadeInUp 0.6s ease-out 0.15s both;
  }

  .delivery-icon-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 14px;
  }

  .delivery-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .delivery-icon.email-icon {
    background: rgba(6, 182, 212, 0.15);
  }

  .delivery-icon.whatsapp-icon {
    background: rgba(37, 211, 102, 0.15);
  }

  .delivery-icon svg {
    width: 22px;
    height: 22px;
  }

  .delivery-plus {
    font-size: 18px;
    color: var(--gray-600);
    font-weight: 300;
  }

  .delivery-text {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.5;
    margin-bottom: 10px;
  }

  .delivery-text strong {
    color: var(--cyan);
  }

  .delivery-timer {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(16, 185, 129, 0.12);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: 20px;
    padding: 6px 16px;
    font-size: 13px;
    color: var(--green);
    font-weight: 600;
  }

  .delivery-timer svg {
    width: 14px;
    height: 14px;
    animation: pulse 1.5s infinite;
  }

  /* ===== DUAL CODE CARDS ===== */
  .codes-section {
    margin-bottom: 28px;
    animation: fadeInUp 0.6s ease-out 0.25s both;
  }

  .codes-section-title {
    font-size: 11px;
    font-weight: 700;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
    margin-bottom: 14px;
  }

  .code-card {
    border-radius: 16px;
    padding: 20px;
    margin-bottom: 12px;
    position: relative;
    overflow: hidden;
  }

  .code-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
  }

  .code-card.migrant {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.08), rgba(6, 182, 212, 0.03));
    border: 1px solid rgba(6, 182, 212, 0.2);
  }

  .code-card.migrant::before {
    background: linear-gradient(90deg, var(--cyan), var(--cyan-dark));
  }

  .code-card.family {
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.08), rgba(236, 72, 153, 0.03));
    border: 1px solid rgba(236, 72, 153, 0.2);
  }

  .code-card.family::before {
    background: linear-gradient(90deg, var(--magenta), var(--magenta-dark));
  }

  .code-card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 14px;
  }

  .code-flag {
    font-size: 28px;
    line-height: 1;
  }

  .code-card-title {
    font-size: 15px;
    font-weight: 700;
    color: var(--white);
  }

  .code-card-desc {
    font-size: 12px;
    color: var(--gray-400);
  }

  .code-display {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    padding: 12px 16px;
    margin-bottom: 10px;
  }

  .code-value {
    font-family: 'DM Serif Display', serif;
    font-size: 20px;
    letter-spacing: 2px;
  }

  .code-card.migrant .code-value { color: var(--cyan); }
  .code-card.family .code-value { color: var(--magenta); }

  .code-loading {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--gray-400);
  }

  .code-loading .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--gray-600);
    animation: dotPulse 1.2s infinite;
  }

  .code-loading .dot:nth-child(2) { animation-delay: 0.2s; }
  .code-loading .dot:nth-child(3) { animation-delay: 0.4s; }

  .code-sent-info {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--gray-400);
  }

  .code-sent-info svg {
    width: 14px;
    height: 14px;
    color: var(--green);
  }

  /* ===== FOMO BENEFITS ===== */
  .fomo-section {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.08), rgba(236, 72, 153, 0.06));
    border: 1px solid rgba(245, 158, 11, 0.2);
    border-radius: 20px;
    padding: 24px 20px;
    margin-bottom: 28px;
    animation: fadeInUp 0.6s ease-out 0.35s both;
    position: relative;
    overflow: hidden;
  }

  .fomo-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(245, 158, 11, 0.08), transparent 70%);
    pointer-events: none;
  }

  .fomo-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(245, 158, 11, 0.15);
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 20px;
    padding: 5px 14px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--gold);
    margin-bottom: 14px;
  }

  .fomo-badge svg {
    width: 14px;
    height: 14px;
  }

  .fomo-title {
    font-family: 'DM Serif Display', serif;
    font-size: 22px;
    color: var(--white);
    line-height: 1.3;
    margin-bottom: 6px;
  }

  .fomo-title em {
    font-style: normal;
    color: var(--gold);
  }

  .fomo-subtitle {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 18px;
  }

  .fomo-benefits {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .fomo-benefit {
    display: flex;
    align-items: center;
    gap: 14px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 14px;
    padding: 14px 16px;
    transition: transform 0.2s;
  }

  .fomo-benefit:hover {
    transform: translateX(4px);
  }

  .fomo-benefit-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .fomo-benefit-icon svg {
    width: 22px;
    height: 22px;
  }

  .fomo-benefit-icon.tele {
    background: rgba(6, 182, 212, 0.15);
    color: var(--cyan);
  }

  .fomo-benefit-icon.therapy {
    background: rgba(236, 72, 153, 0.15);
    color: var(--magenta);
  }

  .fomo-benefit-icon.companion {
    background: rgba(168, 85, 247, 0.15);
    color: #A855F7;
  }

  .fomo-benefit-text {
    flex: 1;
  }

  .fomo-benefit-name {
    font-size: 14px;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 2px;
  }

  .fomo-benefit-desc {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.55);
    line-height: 1.3;
  }

  .fomo-benefit-tag {
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 3px 8px;
    border-radius: 6px;
    white-space: nowrap;
  }

  .fomo-benefit-tag.unlimited {
    background: rgba(16, 185, 129, 0.15);
    color: var(--green);
  }

  .fomo-benefit-tag.weekly {
    background: rgba(236, 72, 153, 0.15);
    color: var(--magenta);
  }

  .fomo-benefit-tag.daily {
    background: rgba(168, 85, 247, 0.15);
    color: #A855F7;
  }

  .fomo-bottom {
    margin-top: 16px;
    text-align: center;
    padding-top: 16px;
    border-top: 1px solid rgba(245, 158, 11, 0.15);
  }

  .fomo-comparison {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.5;
  }

  .fomo-comparison strong {
    color: var(--gold);
  }

  .fomo-comparison .strike {
    text-decoration: line-through;
    opacity: 0.5;
  }

  /* ===== NEXT STEPS ===== */
  .next-steps {
    margin-bottom: 28px;
    animation: fadeInUp 0.6s ease-out 0.45s both;
  }

  .next-steps-title {
    font-size: 11px;
    font-weight: 700;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
    margin-bottom: 14px;
  }

  .step-card {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    background: var(--gray-900);
    border: 1px solid var(--gray-700);
    border-radius: 14px;
    padding: 16px;
    margin-bottom: 10px;
  }

  .step-number {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    font-weight: 700;
    color: white;
    flex-shrink: 0;
  }

  .step-number.s1 { background: linear-gradient(135deg, var(--green), var(--green-dark)); }
  .step-number.s2 { background: linear-gradient(135deg, #A855F7, #7C3AED); }
  .step-number.s3 { background: linear-gradient(135deg, var(--cyan), var(--cyan-dark)); }

  .step-text h4 {
    font-size: 14px;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 2px;
  }

  .step-text p {
    font-size: 12px;
    color: var(--gray-400);
    line-height: 1.4;
  }

  .step-text p strong {
    color: var(--white);
  }

  /* ===== CTA BUTTON ===== */
  .cta-dashboard {
    display: block;
    width: 100%;
    padding: 18px 24px;
    background: linear-gradient(135deg, var(--cyan), var(--cyan-dark));
    border: none;
    border-radius: 14px;
    color: var(--white);
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 17px;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(6, 182, 212, 0.3);
    margin-bottom: 12px;
    animation: fadeInUp 0.6s ease-out 0.55s both;
  }

  .cta-dashboard:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(6, 182, 212, 0.4);
  }

  .cta-dashboard svg {
    display: inline;
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 8px;
  }

  .cta-subtext {
    text-align: center;
    font-size: 12px;
    color: var(--gray-600);
    margin-bottom: 28px;
    animation: fadeInUp 0.6s ease-out 0.6s both;
  }

  .more-loved {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 18px 16px;
    text-align: center;
    margin-bottom: 24px;
    animation: fadeInUp 0.6s ease-out 0.62s both;
  }

  .more-loved p {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 12px;
  }

  .more-loved a {
    display: inline-block;
    padding: 10px 18px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--cyan), var(--cyan-dark));
    color: var(--white);
    text-decoration: none;
    font-size: 13px;
    font-weight: 700;
  }

  /* ===== FOOTER ===== */
  .emotional-footer {
    text-align: center;
    padding: 20px 0 0;
    animation: fadeInUp 0.6s ease-out 0.65s both;
  }

  .emotional-footer .tagline {
    font-family: 'DM Serif Display', serif;
    font-size: 16px;
    color: var(--gray-400);
    font-style: italic;
  }

  .emotional-footer .tagline span {
    color: var(--magenta);
  }

  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(16px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes scaleIn {
    from { opacity: 0; transform: scale(0.5); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes checkDraw {
    from { opacity: 0; stroke-dashoffset: 30; }
    to { opacity: 1; stroke-dashoffset: 0; }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  @keyframes dotPulse {
    0%, 100% { opacity: 0.3; transform: scale(0.8); }
    50% { opacity: 1; transform: scale(1.2); }
  }

  @keyframes shimmer {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
  }

  /* Confetti canvas */
  #confetti {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 100;
  }
</style>

